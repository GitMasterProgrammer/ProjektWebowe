datasource db {
  url      = env("DATABASE_URL")
  provider = "mysql"
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id          Int      @id @default(autoincrement())
  createdAt   DateTime @default(now())
  email       String   @unique
  name        String
  password    String
  reliability Float    @default(5)
}

model Building {
  id        Int        @id @default(autoincrement())
  name      String
  address   String
  locations Location[]
}

model Target {
  id          Int        @id @default(autoincrement())
  name        String
  description String
  locations   Location[]
}

model Location {
  id          Int       @id @default(autoincrement())
  rating      Float     @default(5)
  cooridnates String?
  details     String?
  address     String
  acctual     Boolean   @default(true)
  basedOnAI   Boolean   @default(false)
  target      Target    @relation(fields: [targetId], references: [id])
  targetId    Int
  building    Building? @relation(fields: [buildingId], references: [id])
  buildingId  Int?
  updatedAt   DateTime  @updatedAt
}
